@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Search Overlay -->
<div class="search-overlay position-fixed start-0 end-0 top-0 bottom-0 overflow-hidden">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="search-overlay-close">
                <i class="ph-bold ph-x"></i>
            </div>
            <div class="search-overlay-form">

                <form>
                    <input type="text" class="input-search bg-transparent p-0 d-block w-100" placeholder="Enter your keywords...">
                    <button type="submit" class="d-inline-block bg-transparent p-0 border-0">
                        <i class="ph-bold ph-magnifying-glass"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Search Overlay -->
<!-- Start Page Title Area -->
<div class="page-title-area position-relative z-1">
    <div class="container">
        <div class="page-title-content text-center">
            <h1>About Us</h1>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start About Area -->
