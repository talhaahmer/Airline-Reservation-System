@model IEnumerable<airlines.Models.Class>

@{
    ViewData["Title"] = "Manage Classes";
    Layout = "~/Views/Shared/_Layout1(admin).cshtml";
}

<style>
    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin: 40px 0 10px;
    }

    .styled-hr {
        width: 80px;
        height: 4px;
        background-color: #d72638;
        border: none;
        border-radius: 3px;
        margin: 0 auto 30px;
    }

    .table-container {
        max-width: 700px;
        margin: 0 auto 60px;
        background-color: #fff;
        padding: 45px 35px;
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow-x: auto;
    }

    .create-link {
        display: inline-block;
        margin-bottom: 25px;
        background-color: #d72638;
        color: #fff;
        font-weight: 600;
        font-size: 1.05rem;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(215, 38, 56, 0.3);
        width: 100%;
        text-align: center;
    }

        .create-link:hover {
            background-color: #b61f2d;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(182, 31, 45, 0.4);
        }

    table.table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
        color: #333;
    }

        table.table th, table.table td {
            padding: 14px 20px;
            text-align: left;
            border-bottom: 1px solid #eaeaea;
        }

        table.table th {
            background-color: #f8f9fb;
            font-weight: 700;
            color: #2d3436;
            letter-spacing: 0.5px;
        }

        table.table tbody tr:hover {
            background-color: #f1f3f5;
            transition: 0.3s;
        }

    .action-links {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

        .action-links a {
            padding: 8px 16px;
            font-size: 0.9rem;
            font-weight: 600;
            color: #fff;
            background-color: #007bff;
            border-radius: 6px;
            text-decoration: none;
            box-shadow: 0 3px 10px rgba(0, 123, 255, 0.4);
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            flex: 1;
        }

            .action-links a:hover {
                background-color: #0056b3;
                box-shadow: 0 6px 18px rgba(0, 86, 179, 0.6);
            }

            .action-links a.delete {
                background-color: #dc3545;
            }

                .action-links a.delete:hover {
                    background-color: #c82333;
                }

</style>

<h1 class="page-title">Manage Classes</h1>
<hr class="styled-hr" />

<div class="table-container">
    <p>
        <a asp-action="AddClasses" class="create-link">+ Add New Class</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Namee)</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Namee)</td>
                    <td class="action-links">
                        <a asp-action="EditClasses" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="DeleteClasses" asp-route-id="@item.Id" class="delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
