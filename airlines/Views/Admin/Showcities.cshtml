@model IEnumerable<airlines.Models.City>

@{
    ViewData["Title"] = "Show Cities";
    Layout = "~/Views/Shared/_Layout1(admin).cshtml";
}

<style>
    body {
        background: linear-gradient(45deg, #f2f4f7, #e9edf2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        text-align: center;
        font-size: 2.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-top: 50px;
        margin-bottom: 0px;
        letter-spacing: 1px;
    }

    .styled-hr {
        width: 80px;
        height: 4px;
        background-color: #d72638;
        border: none;
        border-radius: 3px;
        margin: 10px auto 40px auto;
    }

    .table-container {
        max-width: 1140px;
        margin: 0 auto 80px auto;
        background-color: #fff;
        padding: 45px 40px;
        border-radius: 16px;
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
        transition: box-shadow 0.3s ease;
    }

        .table-container:hover {
            box-shadow: 0 16px 45px rgba(0, 0, 0, 0.1);
        }

    .create-link {
        display: inline-block;
        margin-bottom: 30px;
        background-color: #d72638;
        color: #fff;
        font-weight: 600;
        font-size: 1.05rem;
        padding: 12px 26px;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(215, 38, 56, 0.3);
    }

        .create-link:hover {
            background-color: #b61f2d;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(182, 31, 45, 0.4);
        }

    table.table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
        color: #333;
    }

        table.table th,
        table.table td {
            padding: 16px 20px;
            text-align: left;
            border-bottom: 1px solid #e5e8ec;
        }

        table.table th {
            background-color: #f9fafc;
            font-weight: 700;
            color: #2d3436;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.95rem;
        }

        table.table tbody tr {
            transition: background-color 0.3s ease;
        }

            table.table tbody tr:hover {
                background-color: #f3f5f7;
            }

    .action-links {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

        .action-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 8px 16px;
            font-size: 0.88rem;
            font-weight: 600;
            color: #fff;
            background-color: #007bff;
            border-radius: 6px;
            text-decoration: none;
            transition: background 0.3s ease, transform 0.2s ease;
            box-shadow: 0 3px 8px rgba(0, 123, 255, 0.2);
        }

            .action-links a:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

            .action-links a i {
                margin-right: 6px;
                font-size: 1rem;
            }

            .action-links a:nth-child(2) {
                background-color: #dc3545;
                box-shadow: 0 3px 8px rgba(220, 53, 69, 0.2);
            }

                .action-links a:nth-child(2):hover {
                    background-color: #bd2130;
                }
</style>

<h1 class="page-title">Show Cities</h1>
<hr class="styled-hr" />

<div class="table-container">
    <p>
        <a asp-action="Addcities" class="create-link">+ Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Namee)</th>
                <th>@Html.DisplayNameFor(model => model.First().Latitude)</th>
                <th>@Html.DisplayNameFor(model => model.First().Longitude)</th>
                <th style="width: 160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Namee)</td>
                    <td>@Html.DisplayFor(modelItem => item.Latitude)</td>
                    <td>@Html.DisplayFor(modelItem => item.Longitude)</td>
                    <td class="action-links">
                        <a asp-action="EditCities" asp-route-id="@item.Id"><i class="zmdi zmdi-edit"></i>Edit</a>
                        <a asp-action="DeleteCities" asp-route-id="@item.Id"><i class="zmdi zmdi-delete"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
