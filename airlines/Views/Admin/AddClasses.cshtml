@model airlines.Models.Class

@{
    ViewData["Title"] = "Add Classes";
    Layout = "~/Views/Shared/_Layout1(admin).cshtml";
}

<style>
    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-top: 30px;
        margin-bottom: 20px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
    }

    .styled-hr {
        width: 70px;
        height: 4px;
        background-color: #D72638;
        border: none;
        border-radius: 3px;
        margin: 0 auto 30px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            font-weight: 600;
            color: #34495e;
            display: block;
            margin-bottom: 6px;
        }

    .form-control {
        width: 100%;
        height: 45px;
        padding: 10px 14px;
        font-size: 1rem;
        border: 1px solid #ced4da;
        border-radius: 8px;
        background-color: #f9fafb;
        color: #000 !important; 
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }


        .form-control:focus {
            border-color: #D72638;
            box-shadow: 0 0 0 0.15rem rgba(215, 38, 56, 0.25);
            outline: none;
        }

    .btn-custom {
        width: 100%;
        padding: 12px;
        font-size: 1.1rem;
        background-color: #D72638;
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-custom:hover {
            background-color: #b61f2d;
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(215, 38, 56, 0.4);
        }

    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
        margin-top: 4px;
    }

    .back-link {
        text-align: center;
        margin-top: 30px;
    }

        .back-link a {
            display: inline-block;
            padding: 12px 22px;
            background-color: #f1f1f1;
            color: #D72638;
            font-weight: 600;
            border-radius: 6px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .back-link a:hover {
                background-color: #e0e0e0;
                color: #b61f2d;
                transform: translateY(-1px);
                text-decoration: none;
            }
</style>

<!-- Page Header -->
<h1 class="page-title">Add Class</h1>
<hr class="styled-hr" />

<!-- Form Section -->
<div class="form-container">
    <form asp-action="AddClasses">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Class Name -->
        <div class="form-group">
            <label asp-for="Namee">Class Name</label>
            <input asp-for="Namee" class="form-control" required />
            <span asp-validation-for="Namee" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Create Class" class="btn-custom" />
        </div>
    </form>
</div>

<!-- Back Link -->
<div class="back-link">
    <a asp-action="Index">← Back to Class List</a>
</div>
