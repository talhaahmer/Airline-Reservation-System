@model IEnumerable<airlines.Models.BookingViewModell>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Flight Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
     
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }

        thead {
            background-color: #0b3a3f;
            color: #fff;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
            vertical-align: middle;
            font-size: 0.9rem;
        }

        tbody tr:hover {
            background-color: rgba(215, 38, 56, 0.1);
        }

        h3 {
            text-align: center;
            font-size: 2rem;
            color: #D72638;
            margin-bottom: 40px;
            letter-spacing: 1.5px;
            font-weight: 700;
        }

        .btn {
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-sm {
            font-size: 0.9rem;
        }

        .confirm-btn {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .confirm-btn:hover {
                background-color: #218838;
            }

        .cancel-btn {
            background-color: #dc3545;
            color: white;
            border: none;
        }

            .cancel-btn:hover {
                background-color: #c82333;
            }
        .modal-content {
            background-color: #051e23;
            color: #eee;
            border-radius: 10px;
            padding: 25px;
        }

        .modal-header {
            border-bottom: 1px solid #ddd;
        }

            .modal-header .close {
                color: #eee;
                font-size: 1.5rem;
            }

        .modal-title {
            font-size: 1.4rem;
            color: #D72638;
        }

        .form-group label {
            font-weight: 600;
            color: #ddd;
        }

        .form-control {
            background-color: #051e23;
            color: #eee;
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #D72638;
                outline: none;
                box-shadow: 0 0 8px rgba(215, 38, 56, 0.7);
            }

        .modal-footer {
            border-top: 1px solid #ddd;
        }

            .modal-footer .btn {
                background-color: #D72638;
                border: none;
                padding: 12px 25px;
                border-radius: 10px;
                font-weight: 700;
            }

                .modal-footer .btn:hover {
                    background-color: #b61f2d;
                }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h3>My Flight Bookings</h3>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Reservation ID</th>
                    <th>Flight Number</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Trip Type</th>
                    <th>Booked On</th>
                    <th>Action</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ReservationId</td>
                        <td>@item.FlightNumber</td>
                        <td>@item.Origin</td>
                        <td>@item.Destination</td>
                        <td>@item.DepartureTime?.ToString("dd MMM yyyy hh:mm tt")</td>
                        <td>@item.ArrivalTime?.ToString("dd MMM yyyy hh:mm tt")</td>
                        <td>Rs. @item.TotalPrice</td>
                        <td>@item.Status</td>
                        <td>@item.TripType</td>
                        <td>@item.ReservationDate?.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (item.Status == "Blocked")
                            {
                                <button class="btn btn-success btn-sm confirm-btn" data-resid="@item.ReservationId">Confirm</button>
                                <button class="btn btn-danger btn-sm cancel-btn" data-id="@item.ReservationId">Cancel</button>
                            }
                            else if (item.Status == "Confirmed")
                            {
                                <button class="btn btn-danger btn-sm cancel-btn" data-id="@item.ReservationId">Cancel</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form id="confirmBookingForm">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmModalLabel">Confirm Booking</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="ReservationId" id="modalReservationId" />

                            <div class="form-group">
                                <label>Credit Card Number</label>
                                <input type="text" name="CreditCardUsed" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Expiry Date</label>
                                <input type="month" name="ExpiryDate" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>CVV</label>
                                <input type="text" name="CVV" class="form-control" required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Confirm Booking</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
          
            $('.confirm-btn').on('click', function () {
                const resId = $(this).data('resid');
                $('#modalReservationId').val(resId);
                $('#confirmModal').modal('show');
            });

         
            $('#confirmBookingForm').on('submit', function (e) {
                e.preventDefault();

                const formData = $(this).serialize();

                $.ajax({
                    url: '/Reservation/ConfirmReservation',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert("❌ Booking failed: " + response.message);
                        }
                    },
                    error: function () {
                        alert("❌ Error confirming booking.");
                    }
                });
            });

     
            $('.cancel-btn').on('click', function () {
                const id = $(this).data('id');
                if (confirm("Are you sure you want to cancel this reservation?")) {
                    $.post('/Reservation/CancelReservation', { id: id }, function (res) {
                        if (res.success) {
                            alert("Reservation cancelled.");
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>

</body>
</html>
